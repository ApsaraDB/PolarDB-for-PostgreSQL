CREATE OR REPLACE FUNCTION repack.polar_get_root_table_of_partition(table_in OID)
RETURNS OID AS $$
DECLARE
    parent_table OID;
    current_table OID := $1;
BEGIN
    LOOP
        SELECT inhparent INTO parent_table FROM pg_catalog.pg_inherits
            WHERE inhrelid = current_table;
        IF NOT FOUND THEN
            EXIT;
        END IF;
        current_table := parent_table;
    END LOOP;
    RETURN current_table;
END;
$$ LANGUAGE PLpgSQL;
