CREATE OR REPLACE FUNCTION repack.polar_repack_dc_check(old_table TEXT, old_table_oid OID)
RETURNS BOOL
AS $$
DECLARE
    new_table_name TEXT := 'repack.table_' || old_table_oid::TEXT;
    backup_old_table_name TEXT := 'repack.repack_backup_' || old_table_oid::TEXT || '_old';
    backup_new_table_name TEXT := 'repack.repack_backup_' || old_table_oid::TEXT || '_new';
    row_diff_count BIGINT := 1;
BEGIN
    EXECUTE 'SELECT COUNT(*) FROM
    (
      (SELECT * FROM ' || new_table_name || ' EXCEPT ALL SELECT * FROM ' || old_table || ')
      UNION ALL
      (SELECT * FROM ' || old_table || ' EXCEPT ALL SELECT * FROM ' || new_table_name || ')
    ) AS diff'
    INTO row_diff_count;

    IF row_diff_count <> 0 THEN
        -- We cannot raise exception if check failed because exception will rollback the txn.
        -- But we want to backup the tables for debugging here. So we just return false and
        -- let the caller handle the return value.
        RAISE WARNING 'consistency check of table "%" failed with % row differences', old_table, row_diff_count;
        
        -- Backup the tables for debugging if check failed
        EXECUTE 'CREATE TABLE ' || backup_old_table_name || ' AS SELECT * FROM ' || old_table;
        EXECUTE 'CREATE TABLE ' || backup_new_table_name || ' AS SELECT * FROM ' || new_table_name;
        
        RETURN False;
    END IF;

    RAISE NOTICE 'consistency check of table "%" passed', old_table;
    RETURN True;
END;
$$ LANGUAGE plpgsql;

